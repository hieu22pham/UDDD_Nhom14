<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.XacNhanDuyet">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#595151"
        android:gravity="center"
        android:text="Phiếu đăng ký"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:clipToPadding="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="30px"
                android:text="Người làm phiếu:"
                android:textColorLink="#000000" />

            <TextView
                android:id="@+id/tvNguoiLamPhieu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Đặng Văn Khánh" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="30px"
                android:text="Phòng:"
                android:textColorLink="#000000" />

            <TextView
                android:id="@+id/tvPhong"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="204" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="30px"
                android:text="Giá(kỳ):"
                android:textColorLink="#000000" />

            <TextView
                android:id="@+id/tvGia"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="800000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="30px"
                android:text="Loại phòng:"
                android:textColorLink="#000000" />

            <TextView
                android:id="@+id/tvLoaiPhong"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="4 người" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="183dp"
                android:layout_height="30dp"
                android:paddingLeft="30px"
                android:text="Khu:"
                android:textColorLink="#000000" />

            <TextView
                android:id="@+id/tvKhu"
                android:layout_width="155dp"
                android:layout_height="30dp"
                android:text="A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="30px"
                android:text="Tầng:"
                android:textColorLink="#000000" />

            <TextView
                android:id="@+id/tvTang"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="30px"
                android:text="Tiện ích:"
                android:textColorLink="#000000" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nóng lạnh" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều hòa" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Máy giặt" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="22dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnDuyet"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="Duyệt"
        android:textColorLink="#FFFFFF" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=" " />

    <Button
        android:layout_gravity="center"

        android:id="@+id/btnLoaiBo"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#AD818181"
        android:text="Loại bỏ"
        android:textColorLink="#FFFFFF" />

</LinearLayout>